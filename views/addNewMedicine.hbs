<div id="curtainForm" class="form-bottom">
    <form id="medicineForm" name="InputForm" method="post">
        <fieldset>
            <span id="exitForm" class="exit">x</span>
            <p class="center hidden" id="messageField"></p>
            <table id="headerOfComingsForm">
                <tr>
                    <td>
                        <input type="file" accept="image/gif, image/jpeg, image/png" name="imgMedicine" title="">
                    </td>
                    <td class="medicineInput">Имя</td>
                    <td class="medicineInput">
                        <textarea name="medicineName" title="">{{name}}</textarea>
                    </td>
                </tr>
                <tr>
                    <td>
                        <img src="{{photo}}" id="photoMedicine">
                    </td>
                    <td class="medicineInput">Цена</td>
                    <td class="medicineInput">
                        <p><input type="number"  name="price" value="{{price}}" title="">сомони</p>
                    </td>
                </tr>
                <tr>
                    <td colspan="3">
                        <button id="addNewMedicine" class="btn">Добавить новое лекарство</button>
                        <button id="updateMedicine" class="btn hidden">Сохранить измениния</button>
                    </td>
                </tr>
            </table>
        </fieldset>
    </form>
</div>